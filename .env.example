# Synapse Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED - Server will not start without these
# =============================================================================

# Database Configuration (REQUIRED)
MONGODB_URI=mongodb://localhost:27017/synapse

# JWT Configuration (REQUIRED - Must be 32+ characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGEME_MUST_BE_32_CHARACTERS_MINIMUM_FOR_SECURITY
JWT_EXPIRES_IN=7d

# AI API Keys (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional AI Services
GEMINI_API_KEY=your_gemini_api_key_here

# News API
NEWS_API_KEY=your_news_api_key_here

# Twitter API Configuration
TWITTER_BEARER_TOKEN=AAAAAAAAAAAAAAAAAAAAAMC1nwEAAAAARjSmFvESyJicKzC4XJGIBA5uHJU%3DhFQAsucL0p9gW32XHZXGXokNJZXXuw3D86QrVlf4m2Hr1ViheD

# =============================================================================
# External Services (Microservices Architecture)
# =============================================================================

# CrewAI Service URL (REQUIRED if using AI agents)
CREWAI_SERVICE_URL=https://synapse-crewai.onrender.com

# WAHA-PLUS WhatsApp Service (Render.com)
WAHA_SERVICE_URL=https://synapse-waha.onrender.com
WAHA_API_KEY=your_waha_api_key_here
WAHA_ENGINE=WEBJS

# Reddit API Configuration (for CrewAI agents)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=SynapseAgent/1.0

# Telegram Bot Token (for CrewAI agents)  
TELEGRAM_BOT_TOKEN=your_telegram_bot_token`nTELEGRAM_API_ID=your_telegram_api_id`nTELEGRAM_API_HASH=your_telegram_api_hash`nTELEGRAM_USER_SESSION=your_telegram_string_session

# Firecrawl API Configuration (optional)
FIRECRAWL_API_KEY=your_firecrawl_api_key

# =============================================================================
# Application Configuration
# =============================================================================

NODE_ENV=development
PORT=3001

# CRITICAL: Frontend URL for CORS whitelist (REQUIRED for production)
# Development: http://localhost:5173
# Production: https://your-frontend.onrender.com
FRONTEND_URL=http://localhost:5173

# Logging Level (error | warn | info | http | debug)
LOG_LEVEL=info

# Google Calendar API Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000

# =============================================================================
# AG-UI Protocol Configuration
# =============================================================================

# Backend endpoint for AG-UI event streaming (SSE)
VITE_BACKEND_URL=http://localhost:3001
# Enable/disable AG-UI protocol features
AGUI_ENABLED=true
# AG-UI event emission settings
AGUI_BATCH_SIZE=10
AGUI_FLUSH_INTERVAL=1000

# =============================================================================
# Production Deployment Flags
# =============================================================================

# Set to true when deploying to Render.com
RENDER=false

# WhatsApp summary scheduler (true | false)
WHATSAPP_SUMMARY_SCHEDULER_ENABLED=true
