# Synapse Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Database Configuration
MONGODB_URI=mongodb://synapse:synapse123@localhost:27017/synapse?authSource=admin

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-change-this-in-production
JWT_EXPIRES_IN=7d

# AI Services
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key

# Face Recognition Service
FACE_RECOGNITION_SERVICE_URL=http://localhost:5001

# WAHA WhatsApp Configuration
# For Docker: http://waha:3000
# For local development: http://localhost:3001
WAHA_SERVICE_URL=http://localhost:3001
WAHA_API_KEY=your-secure-waha-api-key-change-this

# WAHA Performance Settings (optional)
WAHA_CHATS_LIMIT=300
WAHA_MESSAGES_LIMIT=50
WAHA_TIMEOUT_MS=30000

# External Services (optional)
PERPLEXITY_API_KEY=your-perplexity-api-key
PERPLEXITY_MODEL=sonar-medium-online

# Task Master Configuration (optional)
DEFAULT_SUBTASKS=5
DEFAULT_PRIORITY=medium
PROJECT_NAME=Synapse
PROJECT_VERSION=0.1.0