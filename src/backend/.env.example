# Environment Variables Template for Render Deployment
# Copy this to .env and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/synapse-dev
# For Render: Use MongoDB Atlas connection string
# Example: mongodb+srv://username:password@cluster.mongodb.net/synapse

# JWT Configuration  
JWT_SECRET=your-secure-jwt-secret-key-change-this-in-production

# Search & Vector Database Configuration
EMBEDDING_PROVIDER=openai
CHROMA_URL=http://localhost:8000
# For Render: Use your ChromaDB service URL if hosted separately
# Example: https://your-chromadb-service.onrender.com

PINECONE_API_KEY=
PINECONE_INDEX_NAME=synapse-docs

# API Keys (Required for search functionality)
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here  
VOYAGE_API_KEY=your_voyage_api_key_here

# Node Environment
NODE_ENV=production
PORT=3001
# Render automatically sets PORT environment variable

# CORS Configuration
CORS_ORIGIN=https://your-frontend-app.onrender.com
# For development: http://localhost:5173

# External Services
TRANSCRIPTION_SERVICE_URL=https://synapse-transcription.onrender.com

# WhatsApp Configuration (Optional)
WHATSAPP_API_URL=
WHATSAPP_TOKEN=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Usage Tracking
USAGE_TRACKING_ENABLED=true

# Render-Specific Variables
# These are typically set automatically by Render
# RENDER=true
# RAILWAY_STATIC_URL=your-app-url